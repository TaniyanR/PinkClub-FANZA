<?php declare(strict_types=1); require_once __DIR__ . '/../lib/db.php'; header('Content-Type: application/xml; charset=UTF-8'); $base=rtrim((string)((isset($_SERVER['HTTP_HOST'])?((isset($_SERVER['HTTPS'])&&$_SERVER['HTTPS']!=='off')?'https':'http').'://'.$_SERVER['HTTP_HOST']:'http://localhost').'/public'),'/'); $urls=["$base/index.php","$base/posts.php","$base/actresses.php","$base/genres.php","$base/makers.php","$base/series.php"]; $pdo=db(); foreach($pdo->query('SELECT content_id FROM items ORDER BY updated_at DESC LIMIT 5000')->fetchAll(PDO::FETCH_COLUMN) as $cid){$urls[]=$base.'/item.php?cid='.rawurlencode((string)$cid);} foreach($pdo->query('SELECT id FROM actresses')->fetchAll(PDO::FETCH_COLUMN) as $id){$urls[]=$base.'/actress.php?id='.(int)$id;} foreach($pdo->query('SELECT id FROM genres')->fetchAll(PDO::FETCH_COLUMN) as $id){$urls[]=$base.'/genre.php?id='.(int)$id;} foreach($pdo->query('SELECT id FROM makers')->fetchAll(PDO::FETCH_COLUMN) as $id){$urls[]=$base.'/maker.php?id='.(int)$id;} foreach($pdo->query('SELECT id FROM series')->fetchAll(PDO::FETCH_COLUMN) as $id){$urls[]=$base.'/series_one.php?id='.(int)$id;} foreach($pdo->query('SELECT slug FROM pages WHERE is_published=1')->fetchAll(PDO::FETCH_COLUMN) as $slug){$urls[]=$base.'/page.php?slug='.rawurlencode((string)$slug);} echo "<?xml version=\"1.0\" encoding=\"UTF-8\"?>\n<urlset xmlns=\"http://www.sitemaps.org/schemas/sitemap/0.9\">"; foreach($urls as $u){echo '<url><loc>'.htmlspecialchars($u,ENT_QUOTES,'UTF-8').'</loc></url>';} echo '</urlset>';
